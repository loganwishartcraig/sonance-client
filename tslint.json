{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-react-recommended",
        "tslint-config-airbnb",
        "tslint-react-a11y"
    ],
    "jsRules": {},
    "rules": {
        "max-classes-per-file": [
            true,
            2
        ],
        "max-line-length": [
            true,
            120
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "function-name": [
            true,
            {
                "method-regex": "^[a-z][\\w\\d]+$",
                "private-method-regex": "^[a-z_][\\w\\d]+$",
                "protected-method-regex": "^[a-z_][\\w\\d]+$",
                "static-method-regex": "^[A-Z_\\d]+$",
                "function-regex": "^[a-z][\\w\\d]+$"
            }
        ],
        "no-object-literal-type-assertion": false,
        "no-conditional-assignment": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "ter-indent": [
            "spaces",
            4
        ],
        "no-implicit-dependencies": false,
        "no-shadowed-variable": false,
        "no-submodule-imports": [
            true,
            "redux-saga/effects",
            "redux-saga/utils",
            "redux-saga-test-plan/matchers",
            "redux-saga-test-plan/providers"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "no-bitwise": false
    },
    "rulesDirectory": []
}
